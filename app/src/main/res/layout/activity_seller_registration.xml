<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellerRegistration">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/sellerpiclogo"
        android:background="@drawable/sellerlogo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Registration Form"
        android:layout_below="@+id/sellerpiclogo"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:id="@+id/formid"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formid"
        android:hint="Seller Name"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/seller_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_name"
        android:hint="Seller Phone"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/seller_phone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_phone"
        android:hint="Seller Email"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/seller_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_email"
        android:hint="Seller password"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/seller_password"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_password"
        android:hint="Shop/Business Address"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/seller_address"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20dp"
        android:layout_below="@+id/seller_address"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:id="@+id/registerId"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Have an Account"
        android:textSize="20dp"
        android:background="@android:color/holo_blue_light"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/already_have_acc"/>

</RelativeLayout>