<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellerLoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/sellerpiclogin"
        android:background="@drawable/background3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Login Form"
        android:layout_below="@+id/sellerpiclogin"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:id="@+id/loginformid"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginformid"
        android:hint="Seller Email"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/login_seller_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_seller_email"
        android:hint="Seller Password"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/login_seller_password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20dp"
        android:layout_below="@+id/login_seller_password"
        android:background="@android:color/white"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:id="@+id/seller_loginId"/>

</RelativeLayout>