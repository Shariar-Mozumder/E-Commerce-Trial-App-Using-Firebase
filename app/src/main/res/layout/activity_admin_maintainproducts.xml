<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin.AdminMaintainproducts"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="30dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/maintain_pimage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/maintain_p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/maintain_pimage"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:id="@+id/maintain_Pdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Description"
            android:textAlignment="center"
            android:layout_below="@+id/maintain_p_name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:id="@+id/maintain_P_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:textAlignment="center"
            android:layout_below="@+id/maintain_Pdescription"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Changes"
            android:textAlignment="center"
            android:layout_below="@+id/maintain_P_price"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:background="@drawable/buttons"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete This Product"
            android:textAlignment="center"
            android:layout_below="@+id/apply_changes_btn"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:background="@drawable/buttons"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>